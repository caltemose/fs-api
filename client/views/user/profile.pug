extends ../layouts/default

block content
    h1 User Profile

    if user.role === 'limbo'
        p Your account has not been activated by an administrator. Until then it will be inactive.

    else
        h2 Local Account Info:

        ul.profile-info
            li
                | id:
                = ' '
                span= user._id
            li
                | email:
                = ' '
                span= user.email
            li
                | username:
                = ' '
                span= user.username
            li
                | role:
                = ' '
                span= user.role

